@model BeeMatchingAPP.Models.NguoiDung
@* //thinhne *@
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>login form</title>
    <!-- Bootstrap 4 CSS CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css" />
    <!-- Fontawesome CSS CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" />
    <style>
        import url("https://fonts.googleapis.com/css?family=Maven+Pro:400,500,600,700,800,900&display=swap");

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Maven Pro", sans-serif;
        }

        .wrapper {
            height: 100vh;
        }

        .myColor {
            background-image: linear-gradient(to right, #f83600 50%, #f9d423 150%);
        }

        .myShadow {
            box-shadow: 0 10px 10px rgba(0, 0, 0, 0.5);
        }

        .myBtn {
            border-radius: 50px;
            font-weight: bold;
            font-size: 20px;
            background-image: linear-gradient(to right, #0acffe 0%, #495aff 100%);
            border: none;
        }

            .myBtn:hover {
                background-image: linear-gradient(to right, #495aff 0%, #0acffe 100%);
            }

        .myHr {
            height: 2px;
            border-radius: 100px;
        }

        .myLinkBtn {
            border-radius: 100px;
            width: 50%;
            border: 2px solid #fff;
        }

        media (max-width: 720px) {
            .wrapper
        
        {
            margin: 2px;
        }

        }
    </style>
</head>
<body class="bg-info">
   
    <div class="container">

        <!-- Registration Form Start -->
        <div class="row justify-content-center wrapper">
            <div class="col-lg-10 my-auto myShadow">
                <div class="row">
                    <div class="col-lg-5 d-flex flex-column justify-content-center myColor p-4">
                        <h1 class="text-center font-weight-bold text-white">Xin Chào!</h1>
                        <hr class="my-4 bg-light myHr" />
                        <p class="text-center font-weight-bolder text-light lead">Vui lòng điền vào thông tin cá nhân của bạn.</p>
                        <button class="btn btn-outline-light btn-lg font-weight-bolder mt-4 align-self-center myLinkBtn">
                            <a asp-action="Login" class="btn head-btn2">Đăng nhập</a>
                        </button>
                    </div>
                    <div class="col-lg-7 bg-white p-4">
                        <h1 class="text-center font-weight-bold text-primary">Tạo Tài Khoản</h1>
                        <hr class="my-3" />
                        <form asp-action="Register" method="post" class="px-3">
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div style="color: red; font-weight: bold; margin-bottom: 10px;">
                                    @TempData["ErrorMessage"]
                                </div>
                            }
                            <div class="input-group input-group-lg form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text rounded-0"><i class="far fa-user fa-lg fa-fw"></i></span>
                                </div>
                                <input asp-for="ten_dang_nhap" id="username1" class=" form-control rounded-0" placeholder="Tên đăng nhập" required />
                                <span asp-validation-for="ten_dang_nhap" class="text-danger"></span>
                            </div>
                            <div class="input-group input-group-lg form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text rounded-0"><i class="fas fa-key fa-lg fa-fw"></i></span>
                                </div>
                                <input asp-for="Email" id="email" class="form-control rounded-0" placeholder="Email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="input-group input-group-lg form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text rounded-0"><i class="fas fa-key fa-lg fa-fw"></i></span>
                                </div>
                                <input asp-for="mat_khau" id="password1" class="form-control rounded-0" minlength="5" placeholder="Mật khẩu" required />
                                <span asp-validation-for="mat_khau" class="text-danger"></span>
                            </div>
                            <div class="input-group input-group-lg form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text rounded-0"><i class="fas fa-key fa-lg fa-fw"></i></span>
                                </div>
                                <input asp-for="ConfirmPassword" id="confirmpass1" class="form-control rounded-0" minlength="5" placeholder="Xác nhận mật khẩu" required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="input-group input-group-lg form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text rounded-0"><i class="fas fa-key fa-lg fa-fw"></i></span>
                                </div>
                                <input asp-for="Otp" class="form-control rounded-0" placeholder="Nhập mã OTP" required />
                                <span asp-validation-for="Otp" class="text-danger"></span>
                            </div>
                            <div style="margin-top: 10px" class="input-group input-group-lg form-group">
                                <div>
                                    <!-- "Người xin việc" được chọn mặc định -->
                                    <input style="margin-left: 65px" type="radio" name="Roles" value="Người xin việc" checked />
                                    <label style="margin-right: 100px" for="Roles">Người xin việc</label>
                                </div>
                                <div>
                                    <!-- "Doanh nghiệp" không được chọn mặc định -->
                                    <input type="radio" name="Roles" value="Doanh Nghiệp" />
                                    <label for="Roles">Doanh nghiệp</label>
                                </div>
                                <span asp-validation-for="Roles" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div id="passError" class="text-danger font-weight-bolder"></div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Đăng Ký" class="btn btn-primary btn-lg btn-block myBtn" />
                            </div>
                        </form>
                        <form asp-action="SendOtp" onsubmit="saveInputValues()" method="post">
                            <input type="hidden" id="username" name="username" value="" />
                            <input type="hidden" id="gmail" name="gmail" value="" />
                            <input type="hidden" id="password" name="password" value="" />
                            <input type="hidden" id="confirmpassword" name="confirmpassword" value="" />
                            <button type="submit">Gửi mã OTP</button>
                            <span>@ViewData["Otp"]</span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Registration Form End -->
        <!-- Forgot Password Form Start -->
        <div class="row justify-content-center wrapper" id="forgot-box" style="display: none;">
            <div class="col-lg-10 my-auto myShadow">
                <div class="row">
                    <div class="col-lg-7 bg-white p-4">
                        <h1 class="text-center font-weight-bold text-primary">Quên mật khẩu?</h1>
                        <hr class="my-3" />
                        <p class="lead text-center text-secondary">Để đặt lại mật khẩu, hãy nhập địa chỉ email đã đăng ký và chúng tôi sẽ gửi cho bạn hướng dẫn đặt lại mật khẩu qua email của bạn!</p>
                        <form action="#" method="post" class="px-3" id="forgot-form">
                            <div id="forgotAlert"></div>
                            <div class="input-group input-group-lg form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text rounded-0"><i class="far fa-envelope fa-lg"></i></span>
                                </div>
                                <input type="email" id="femail" name="email" class="form-control rounded-0" placeholder="Email" required />
                            </div>
                            <div class="form-group">
                                <input type="submit" id="forgot-btn" value="Thay Đổi Mật Khẩu" class="btn btn-primary btn-lg btn-block myBtn" />
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-5 d-flex flex-column justify-content-center myColor p-4">
                        <h1 class="text-center font-weight-bold text-white">Thay Đổi Mật Khẩu!</h1>
                        <hr class="my-4 bg-light myHr" />
                        <button class="btn btn-outline-light btn-lg font-weight-bolder myLinkBtn align-self-center" id="back-link">Trở về</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Forgot Password Form End -->
    </div>
    <!-- jQuery CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(function () {
            $("#register-link").click(function () {
                $("#login-box").hide();
                $("#register-box").show();
            });
            $("#login-link").click(function () {
                $("#login-box").show();
                $("#register-box").hide();
            });
            $("#forgot-link").click(function () {
                $("#login-box").hide();
                $("#forgot-box").show();
            });
            $("#back-link").click(function () {
                $("#login-box").show();
                $("#forgot-box").hide();
            });
        });

    </script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    // Lưu giá trị các ô input trước khi submit
    function saveInputValues() {
        const inputs = document.querySelectorAll('input');
        inputs.forEach(input => {
            sessionStorage.setItem(input.name, input.value); // Lưu giá trị theo tên
        });
    }
    // Phục hồi giá trị các ô input sau khi load lại trang
    function restoreInputValues() {
        const inputs = document.querySelectorAll('input');
        inputs.forEach(input => {
            const savedValue = sessionStorage.getItem(input.name);
            if (savedValue) {
                input.value = savedValue; // Gán lại giá trị đã lưu
            }
        });
    }

    // Gọi khôi phục giá trị khi trang load
    window.onload = restoreInputValues;
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const usernameInputForm1 = document.getElementById('username1');
        const usernameInputForm2 = document.getElementById('username');
        const emailInputForm1 = document.getElementById('email');
        const emailInputForm2 = document.getElementById('gmail');
        const passwordInputForm1 = document.getElementById('password1');
        const passwordInputForm2 = document.getElementById('password');
        const confirmpassInputForm1 = document.getElementById('confirmpass1');
        const confirmpassInputForm2 = document.getElementById('confirmpassword');


        // Đồng bộ giá trị ban đầu nếu đã có giá trị có sẵn
        emailInputForm1.addEventListener("input", function () {

            usernameInputForm2.value = usernameInputForm1.value;
            emailInputForm2.value = emailInputForm1.value;
            passwordInputForm2.value = passwordInputForm1.value;
            confirmpassInputForm2.value = confirmpassInputForm1.value;

        });

    });
</script>