@model BeeMatchingAPP.Models.NguoiTimViec

@{
    ViewData["Title"] = "Hồ Sơ";
}
<style>
    /* General body styling */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fa;
        color: #333;
    }

    /* Main container for the form */
    h1 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    h4 {
        color: #4CAF50;
        font-weight: bold;
    }

    /* Row to center the form */


    /* Form styling */
    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: 600;
        margin-bottom: 5px;
        display: inline-block;
    }

    input.form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

        input.form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
        }

    /* Validation error styling */
    .text-danger {
        color: #e74c3c;
        font-size: 0.9em;
    }

    /* Submit button styling */
    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 12px 20px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #45a049;
        }



    /* Additional styling for the entire form container */
    .form-container {
        max-width: 800px;
        margin: 0 auto;
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

</style>
